<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE5E5"
    android:backgroundTint="#FFEB3B"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:layout_margin="20dp"
        android:background="#FDF3F3"
        android:backgroundTint="#FBFBF7">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancha" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_usuario"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtv_clave"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/txtv_clave"
                android:inputType="textPersonName" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="10"
            android:background="#FF9292"
            android:backgroundTint="#A31D1D"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="141dp"
                android:src="@drawable/putaimagen" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:onClick="ingresar"
                android:text="@string/btn_ingresar" />


        </LinearLayout>


    </LinearLayout>









